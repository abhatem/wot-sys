{"@context": "https://www.w3.org/2019/wot/td/v1",
	    "id": "de.tum:ei:esi",
	    "title": "Tutlebot",
	    "securityDefinitions": { "nosec_sc": {"scheme": "nosec"}
	    },
	    "security": ["nosec_sc"],
	    "properties": {
	    	"location":{
	    		"title":"Location",
	    		"description":"Stores the current Location",
				"type":"object",
				"required":["x","y"],
				"properties": {
					"x":{
						"type":"integer",
						"minimum" : 200,
						"maximum" : 200
					},
					"y":{
						"type":"integer",
						"minimum" : 200,
						"maximum" : 200
					}
				},
				"forms": [{"href": "http://localhost:8000/properties/location",
					"op": ["readproperty"],
					"contentType":"application/json"
					}
				]
	    	},
			"home":{
	    		"title":"Home",
	    		"description":"Stores value of the Home Location",
	    		"type":"object",
				"required":["x","y"],
				"properties": {
					"x":{
						"type":"integer",
						"minimum" : 200,
						"maximum" : 200
					},
					"y":{
						"type":"integer",
						"minimum" : 200,
						"maximum" : 200
					}
				},
				"forms": [
					{"href": "http://localhost:8000/properties/home",
					"op": ["readproperty", "writeproperty"],
					"contentType":"application/json"
					}
				]
			},
			"locationArm":{
	    		"title":"Location",
	    		"description":"Stores the current Location of the Arm",
                "type":"object",
				"required":["x","y","z"],
				"properties": {
					"x":{
						"type":"integer",
						"minimum" : 200,
						"maximum" : 200
					},
					"y":{
						"type":"integer",
						"minimum" : 200,
						"maximum" : 200
					},
					"z":{
						"type":"integer",
						"minimum" : 200,
						"maximum" : 200
					}
				},
				"forms": [{"href": "http://localhost:8000/properties/locationarm",
					"op": ["readproperty"],
					"contentType":"application/json"
					}
				]
	    	},
            "homeArm":{
	    		"title":"Home Arm",
	    		"description":"Stores value of the Arm Home Location",
	    		"type":"object",
				"required":["x","y","z"],
				"properties": {
					"x":{
						"type":"integer",
						"minimum" : 200,
						"maximum" : 200
					},
					"y":{
						"type":"integer",
						"minimum" : 200,
						"maximum" : 200
					},
					"z":{
						"type":"integer",
						"minimum" : 200,
						"maximum" : 200
					}
				},
				"forms": [
					{"href": "http://localhost:8000/properties/homearm",
					"op": ["readproperty", "writeproperty"],
					"contentType":"application/json"
					}
				]
	    	}
	    },
	    "actions":{
	
